# http://editorconfig.org

root = true  # 根路径

# 对所有文件生效
[*]
charset = utf-8   # 文件编码
indent_style = space # 缩进类型
indent_size = 2 #缩进数量
end_of_line = lf # 换行符格式
insert_final_newline = true # 是否在文件最后插入空行
trim_trailing_whitespace = true #是否删除行尾空格

# 对后缀名为 md 的文件生效
[*.md]
trim_trailing_whitespace = false
